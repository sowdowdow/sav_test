{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ client.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ client.prenom }}</td>
            </tr>
            <tr>
                <th>Adr1</th>
                <td>{{ client.adr1 }}</td>
            </tr>
            <tr>
                <th>Adr2</th>
                <td>{{ client.adr2 }}</td>
            </tr>
            <tr>
                <th>Codepos</th>
                <td>{{ client.codepos }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ client.ville }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('client_index') }}">{% trans %}retour à la liste{% endtrans %}</a>

    <a href="{{ path('client_edit', {'id': client.id}) }}">edit</a>

    <a href="{{ path('sav_new', {'id_client': client.id}) }}">{% trans %}Créer un SAV{% endtrans %}</a>

    {{ include('client/_delete_form.html.twig') }}
{% endblock %}
